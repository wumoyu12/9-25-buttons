window.addEventListener("load", addListener);
var result = "";
function addListener()
{
	document.get.ElementByID("txtResult").disabled = true;
	document.get.ElementByID("btnadd").addEventListener("click", Addition);
	document.get.ElementByID("btnsub").addEventListener("click", Subtraction);
	document.get.ElementByID("btnmult").addEventListener("click", Multiplication);
	document.get.ElementByID("btndiv").addEventListener("click", Division);
	document.get.ElementByID("btnclear").addEventListener("click", Clear);
}

function Click()
{
	document.getElementByID("txtnumone").addEventListener("click",ButtonOne);
	document.getElementByID("txtnumtwo").addEventListener("click",ButtonTwo);
}

function Addition()
{
	Click();
	var numone = document.getElementByID("txtnumone").value;
	var numtwo = document.getElementByID("txtnumtwo").value;
	if (numone == "" || numtwo == "")
		{
			alert("You missinng the number(s)")
			CheckFocus();
		}
	else
	{
		result = parseInt(numone) + parseInt(numtwo);
		document.getElementByID("txtResult").value = result;
	}

}

function Subtraction()
{
	Click();
	var numone = document.getElementByID("txtnumone").value;
	var numtwo = document.getElementByID("txtnumtwo").value;
	if (numone == "" || numtwo == "")
		{
			alert("You missinng the number(s)")
			CheckFocus();
		}
	else
	{
		result = parseInt(numone) - parseInt(numtwo);
		document.getElementByID("txtResult").value = result;
	}
}

function Multiplication()
{
	Click();
	var numone = document.getElementByID("txtnumone").value;
	var numtwo = document.getElementByID("txtnumtwo").value;
	if (numone == "" || numtwo == "")
		{
			alert("You missinng the number(s)")
			CheckFocus();
		}
	else
	{
		result = parseInt(numone) * parseInt(numtwo);
		document.getElementByID("txtResult").value = result;
	}
}

function Division()
{
	Click();
	var numone = document.getElementByID("txtnumone").value;
	var numtwo = document.getElementByID("txtnumtwo").value;
	if (numone == "" || numtwo == "")
		{
			alert("You missinng the number(s)")
			CheckFocus();
		}
	else
	{
		result = parseInt(numone) / parseInt(numtwo);
		document.getElementByID("txtResult").value = result;
	}
}


function CheckFocus()
{
	if (numone == "")
		{
			document.getElementByID("txtnumone").focus();
			
		}
	else
	{
		document.get.ElementByID("txtnumtwo").focus();
	}
}




